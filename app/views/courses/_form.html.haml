= form_for @course, html: { class: 'form-horizontal' } do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .control-group.field
    = f.label :title, class: 'control-label'
    .controls
      = f.text_field :title
  .control-group.field
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area :description, class: 'input-xlarge'
  .control-group.field
    = f.label :category, class: 'control-label'
    .controls
      = f.text_field :category
  = f.hidden_field :teacher_id
  .control-group.field
    = f.label :hidden, class: 'control-label'
    .controls
      = f.check_box :hidden, checked: ('checked' if @course.hidden.nil? || @course.hidden)
  .actions
    = f.submit 'Save'
