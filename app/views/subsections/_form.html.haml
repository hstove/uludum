= form_for @subsection do |f|
  - if @subsection.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subsection.errors.count, "error")} prohibited this subsection from being saved:"
      %ul
        - @subsection.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :section_id, value: params[:section_id]
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save', class: 'btn'
