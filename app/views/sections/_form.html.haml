= form_for [@course, @section] do |f|
  - if @section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :course_id, value: params[:course_id] || @section.course_id
  = form_element f, :title, :text_field
  = form_element f, :description, :text_area
  - unless @section.new_record?
    = form_element f, :position, :number_field
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
