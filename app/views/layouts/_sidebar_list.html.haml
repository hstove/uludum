- name = list.first.class.to_s
%li.nav-header
  = icon('chevron-up', false, 'data-class' => name.downcase) unless active.nil?
  = "#{name}s"
- list.each do |obj|
  - clazz = !active.nil? && active != obj ? 'hid sidebar-inactive' : 'sidebar-active'
  %li{'data-class' => name.downcase, class: clazz}
    - small = ""
    - if enrolled? obj
      - title = icon(:ok) if complete? obj
      - small = content_tag :span, title, class: 'small'
    = link_to small + " " + obj.title, obj, class: "#{obj == active ? 'light-purple active' : 'white'}"