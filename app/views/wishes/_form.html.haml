= form_for @wish, html: { class: 'form-horizontal' } do |f|
  - if @wish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wish.errors.count, "error")} prohibited this wish from being saved:"
      %ul
        - @wish.errors.full_messages.each do |msg|
          %li= msg

  = form_element f, :title, :text_field
  = form_element f, :description, :text_area

  .actions
    = f.submit 'Save', class: 'btn btn-primary'
