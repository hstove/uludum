= form_for [@discussable, @discussion] do |f|
  - if @discussion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discussion.errors.count, "error")} prohibited this discussion from being saved:"
      %ul
        - @discussion.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :user_id
  = form_element f, :title, :text_field
  = form_element f, :body, :text_area, "Description"
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
