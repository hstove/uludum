.row
  .span10.offset1
    %br

    = form_for @user, html: {class: 'form form-horizontal well'} do |f|
      %h4 Create an Account
      = f.error_messages

      = form_element f, :username, :text_field
      = form_element f, :email, :text_field, "Email Address"
      = form_element f, :password, :password_field, "Enter Password"
      = form_element f, :password_confirmation, :password_field, "Confirm Password"
      .field.control-group
        = f.submit (@user.new_record? ? "Sign up" : "Update"), class: 'btn btn-success'
      = f.hidden_field :return_to, value: params[:return_to]

    %p== Already have an account? #{link_to "Log in", login_path}.

:coffeescript
  mixpanel?.track("view signup page");