.row
  .span10.offset1
    %h1
      - if @user.avatar_url
        = avatar_tag @user, height: 120, width: 120
        =# filepicker_image_tag @user.avatar_url, height: 120, h:120, w: 120, width: 120 class: 'pull-left user-avatar', fit: 'clip'
      = @user.username
      (
      = @user.points
      )

    %h3= link_to(@user.email, "mailto:#{@user.email}") if @user.show_email

    %p.small= @user.created_at_in_words
    %p.small= ("Last logged in #{time_ago_in_words(@user.last_login)} ago") if @user.last_login

    - unless @user.teacher_description.blank?
      .break
      %h3== #{@user.username}'s Teacher Description
      %p.big= @user.teacher_description.html_safe

    .break

    %h3 About Me
    %p.big
      - if !@user.about_me.blank?
        = @user.about_me.html_safe
      - else
        %em This user has not set up any information about them.

      - if can? :edit, @user
        %br
        = link_to "Update Your Profile", edit_user_path(@user), class: 'btn btn-success'

    - if @user.courses.count > 0
      .break
      %h3
        Taught Courses
        == (#{@user.courses.count})
      %ul
        - @user.courses.sort{|a,b| b.questions.count <=> a.questions.count}.each do |course|
          %li.big.user-list
            = link_to course.title, course
            %span.small{style: "margin-left: 10px;"}
              in
              = link_to course.category, courses_path(category: course.category)

    - if !@user.enrolled_courses.empty?
      .break
      %h3
        Enrolled Courses
        == (#{@user.enrolled_courses.count})
      %ul
        - @user.enrolled_courses.sort{|a,b| b.percent_complete(@user) <=> a.percent_complete(@user)}.each do |course|
          %li.big.user-list
            %strong= course.percent_complete(@user).to_s + "%"
            = link_to course.title, course
            %span.small{style: "margin-left: 10px;"}
              in
              = link_to course.category, courses_path(category: course.category)
              - if can? :manage, @user
                = link_to icon(:remove), enrollment_path(@user.enrollment_in(course).id), method: :delete, confirm: "This will unenroll you from #{course.title}. Are you sure you want to continue?"

    - if can?(:manage, @user) && !@user.recipient_token
      .break
      %p
        %em In order to get paid for classes or funds, you must first configure your payment information.
      = link_to "Configure Payment Information", prefill_user_path, class: 'btn btn-primary'
